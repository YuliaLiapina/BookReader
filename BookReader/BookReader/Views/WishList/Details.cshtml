@model BookReader.Models.WishListViewModel

@{
    ViewBag.Title = "Details";
}

<div>
    <h4>"@Model.Name"</h4>  <p><a class="btn btn-default" href="/WishList/Edit/@Model.Id">Изменить название &raquo;</a></p>
    <hr />

    <table>
        <tbody>
            @if (Model.Books.Count != 0)
            {
                foreach (var book in Model.Books)
                {
                    <tr>
                        <td>
                            <img src="@book.Cover" width="100" , height="150" />
                            <br />
                            <a href="/Book/Reed/@book.Id">@book.Name</a>
                        </td>

                        <td width="700">
                            @book.Annotation
                        </td>
                        <td>
                            @Html.ActionLink("Удалить из избранного", "DeleteBookFromWishList", "WishList", new { bookId = book.Id, wishListId = Model.Id }, null)
                        </td>

                    </tr>
                }
            }
            else
            {

                <h1> Библиотека пуста </h1>

            }

        </tbody>
    </table>
</div>
<div>
    <p><a class="btn btn-default" href="/WishList/WishLists">Назад &raquo;</a></p>
</div>