@model BookReader.Models.AuthorViewModel

@{
    ViewBag.Title = "Details";
}

    <div class="books-author">
        <h2>
            Все книги автора @Model.FirstName @Model.LastName
        </h2>
        <div>

            @foreach (var book in Model.Books)
            {
                <span class="books-in-author">
                    <a href="/Book/Details/@book.Id">
                        <img src="@book.Cover" width="150" , height="200" />
                        <p>@book.Name</p>
                    </a>
                </span>
            }
        </div>
        <div>
            <p><a class="btn btn-default" href="/Home/Index">Назад &raquo;</a></p>
        </div>
    </div>