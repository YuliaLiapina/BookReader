@model BookReader.Models.StartPageIndexViewModel
@{
    ViewBag.Title = "Home Page";
}

@*<div class="container-fluid">
    <div class="row">*@
    <div class="books-genres-authors">
        <div @*class="col-2"*@ id="column-1">
            <h1>Жанры</h1>
            @foreach (var genre in Model.Genres)
            {
                <p><a href="/Genre/Details/@genre.Id">@genre.Name</a></p>
            }
        </div>

        <div @*class="col-8"*@ id="column-2">

            @foreach (var book in Model.Books)
            {
            <span class="element">
                <a href="/Book/Details/@book.Id">
                    <img id="image-book" src="@book.Cover" height="200" width="130" /><br />
                    @book.Name
                </a>
            </span>

            }
        </div>

        <div @*class="col-2"*@ id="column-3">
            <h1>Авторы</h1>
            @foreach (var author in Model.Authors)
            {
                <p><a href="/Author/Details/@author.Id">@author.FirstName @author.LastName</a></p>
            }
        </div>
    </div>










