@model BookReader.Models.IndexViewModel
@{
    ViewBag.Title = "Home Page";
}

    <div class="books">    
        <span id="genres">
            @foreach (var genre in Model.Genres)
            {
                <p>@genre.Name</p>
            }
        </span>
                @foreach (var book in Model.Books)
                {
        <span id="book">
            <p><img class="image" src="@book.Cover" height="150" width="100" /></p>
            <p><a href="/Book/Details/@book.Id">@book.Name</a></p>
        </span>
            }       
    </div>

<style>
    
    #genres{
        margin-left:10px;
        margin-top: 50px;
        width:15%;
        display:inline-block;
    }
    #book{
        margin-top: 50px;
        margin-left:50px;
        padding-top: 20px;
        width:15%;
        display:inline-block;
        text-align:center;
    }
    .image{
        margin-top: 50px;
    }
</style>







