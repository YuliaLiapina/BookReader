@model BookReader.Models.StartPageIndexViewModel
@{
    ViewBag.Title = "Home Page";
}
<div class="container body-content">
    <div class="genres">
        <h1>Жанры</h1>
        @foreach (var genre in Model.Genres)
        {
            <p><a href="/Genre/Details/@genre.Id">@genre.Name</a></p>
        }
        </div>
    <div class="authors">
        <h1>Авторы</h1>
            @foreach (var author in Model.Authors)
            {
                <p><a href="/Author/Details/@author.Id">@author.FirstName @author.LastName</a></p>
            }
    </div>
</div>
<div class="books">
    @foreach (var book in Model.Books)
    {
    <span class="book-elements">

        <p class="element"><img class="image" src="@book.Cover" height="150" width="100" /><br />
        <a href="/Book/Details/@book.Id">@book.Name</a></p>
    </span>
    }
</div>
<style>
       .container {
  position: relative;
}

.genres {
  position: absolute;
  top: 8px;
  left: 16px;
  font-size: 16px;
}
.authors{   
  position: absolute;
  top: 8px;
  right: 16px;
  font-size: 16px;
}
   .books{
  position: absolute;
  top: 50%;
  width: 60%;
  display: inline-block;
  margin-left:300px;
   }
   .book-elements{
       display:inline-block;
       margin-left:5px;
       margin-right: 5px;
       margin-bottom:5px;
   }
   .element p{
       text-align:center;
         margin-left:5px;
       margin-right: 5px;
       margin-bottom:5px;
   }
   .book-elements img{
       text-align:center;
   }
</style>







